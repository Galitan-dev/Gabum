{
  "name": "gabum",
  "version": "0.0.0",
  "description": "A simple project manager made with Node JS",
  "main": "bin/src/index.js",
  "repository": "git@github.com:Galitan-dev/Gabum-V2.git",
  "author": "Galitan-dev <galitan.dev@gmail.com>",
  "license": "MIT",
  "private": false,
  "dependencies": {
    "@types/figlet": "^1.5.4",
    "chalk": "4.1.0",
    "chalk-animation": "^1.6.0",
    "figlet": "^1.5.2",
    "gradient-string": "^2.0.0",
    "inquirer": "^8.2.0",
    "nanospinner": "^1.0.0",
    "yaml": "^1.10.2",
    "yargs": "^17.3.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@types/chalk-animation": "^1.6.1",
    "@types/node": "^17.0.20",
    "@types/yargs": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "eslint": "^8.9.0",
    "husky": "^7.0.4",
    "pinst": "^3.0.0",
    "prettier": "^2.5.1",
    "standard-version": "^9.3.2",
    "typescript": "^4.5.5"
  },
  "bin": "bin/index.js",
  "scripts": {
    "postinstall": "husky install",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "lint": "eslint . --ext .ts",
    "fix": "eslint . --ext .ts --fix",
    "release": "standard-version",
    "postpublish": "git push --follow-tags origin main",
    "build": "tsc",
    "start": "node bin/index.js",
    "prestart": "yarn -s build",
    "format": "prettier --config .prettierrc 'src/**/*.ts' --write"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "subject-case": [
        2,
        "never",
        [
          "start-case",
          "pascal-case"
        ]
      ]
    }
  }
}
