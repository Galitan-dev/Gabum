{
  "compilerOptions": {
    "outDir": "bin",
    "target": "es2016",
    "module": "CommonJS",
    "esModuleInterop": true,      
    "forceConsistentCasingInFileNames": true,
    "strict": true,                 
    "skipLibCheck": true,
    "moduleResolution": "node",
    "typeRoots": [
      "node_modules/@types",
      "src/main/types"
    ],
    "baseUrl": "src/main",
    "experimentalDecorators": true
  }
}
